<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Project_Sauyo.Profile"
    BackgroundImageSource="class1.png">

    <Grid RowDefinitions="Auto, *">

        <!-- CENTERED TITLE -->
        <Grid Row="0" Padding="0,0,0,0">
            <Grid HorizontalOptions="Center" TranslationY="25">
                <Label Text="PROFILE"
                       FontSize="64"
                       FontFamily="SuperCartoon"
                       TextColor="Black"
                       TranslationX="2"
                       TranslationY="2"/>
                <Label Text="PROFILE"
                       FontSize="64"
                       FontFamily="SuperCartoon"
                       TextColor="White"/>
            </Grid>
        </Grid>

        <!-- MAIN CONTENT AREA -->
        <Grid Row="1">

            <!-- WHITE PANEL (FIXED, NO SCROLL) -->
            <Border BackgroundColor="White"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 16"
                    Margin="40"
                    VerticalOptions="Fill">

                <VerticalStackLayout Padding="20" Spacing="10">

                    <Label Text="HELLO STUDENTS!"
                           FontFamily="SuperCartoon"
                           FontSize="36"
                           HorizontalOptions="Center"/>

                    <Label Text="UPDATE YOUR INFORMATION HERE"
                           FontFamily="SuperCartoon"
                           FontSize="16"
                           TextColor="#B3000000"
                           HorizontalOptions="Center"/>

                    <!-- FIRST NAME -->
                    <Label Text="First Name"
                           FontSize="17"
                           FontFamily="SuperCartoon"/>
                    <Border BackgroundColor="#D9D9D9"
                            StrokeShape="RoundRectangle 16"
                            HeightRequest="40">
                        <Entry x:Name="firstname"
                               Placeholder="First Name"
                               FontFamily="SuperCartoon"
                               FontSize="18"/>
                    </Border>

                    <!-- LAST NAME -->
                    <Label Text="Last Name"
                           FontSize="17"
                           FontFamily="SuperCartoon"/>
                    <Border BackgroundColor="#D9D9D9"
                            StrokeShape="RoundRectangle 16"
                            HeightRequest="40">
                        <Entry x:Name="lastname"
                               Placeholder="Last Name"
                               FontFamily="SuperCartoon"
                               FontSize="18"/>
                    </Border>

                    <!-- NICKNAME -->
                    <Label Text="Nickname"
                           FontSize="17"
                           FontFamily="SuperCartoon"/>
                    <Border BackgroundColor="#D9D9D9"
                            StrokeShape="RoundRectangle 16"
                            HeightRequest="40">
                        <Entry x:Name="nickname"
                               Placeholder="Nickname"
                               FontFamily="SuperCartoon"
                               FontSize="18"/>
                    </Border>

                    <!-- BIRTHDAY -->
                    <Label Text="Birthday"
                           FontSize="17"
                           FontFamily="SuperCartoon"/>
                    <Border BackgroundColor="#D9D9D9"
                            StrokeShape="RoundRectangle 16"
                            HeightRequest="40">
                        <DatePicker x:Name="birthday"
                                    FontFamily="SuperCartoon"
                                    FontSize="18"/>
                    </Border>

                    <!-- BARANGAY -->
                    <Label Text="Barangay"
                           FontSize="17"
                           FontFamily="SuperCartoon"/>
                    <Border BackgroundColor="#D9D9D9"
                            StrokeShape="RoundRectangle 16"
                            HeightRequest="40">
                        <Picker x:Name="barangay"
                                FontFamily="SuperCartoon"/>
                    </Border>

                    <!-- SEX -->
                    <Label Text="Sex"
                           FontSize="17"
                           FontFamily="SuperCartoon"
                           HorizontalOptions="Center"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="30" HorizontalOptions="Center">

                        <!-- MALE -->
                        <Grid Column="0">
                            <ImageButton
        x:Name="MaleBtn"
        Source="male.png"
        BackgroundColor="Transparent"
        WidthRequest="60"
        HeightRequest="60"
        Clicked="MaleClicked"/>

                            <Border 
        x:Name="MaleHighlight"
        Opacity="0"
        BackgroundColor="#80000000"  
        StrokeShape="RoundRectangle 10"
        WidthRequest="60"
        HeightRequest="60"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        IsVisible="False"/>

                            <Image 
        x:Name="MaleCheck"
        Opacity="0"
        Source="checked_button.png"
        IsVisible="False"
        WidthRequest="40"
        HeightRequest="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
                        </Grid>

                        <!-- FEMALE -->
                        <Grid Column="1">
                            <ImageButton
        x:Name="FemaleBtn"
        Source="female.png"
        BackgroundColor="Transparent"
        WidthRequest="60"
        HeightRequest="60"
        Clicked="FemaleClicked"/>

                            <Border 
        x:Name="FemaleHighlight"
        Opacity="0"
        BackgroundColor="#80000000"  
        StrokeShape="RoundRectangle 10"
        WidthRequest="60"
        HeightRequest="60"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        IsVisible="False"/>

                            <Image 
        x:Name="FemaleCheck"
        Source="checked_button.png"
        Opacity="0"
        IsVisible="False"
        WidthRequest="40"
        HeightRequest="40"
        HorizontalOptions="Center"
        VerticalOptions="Center"/>
                        </Grid>


                    </Grid>

                    <!-- BUTTONS -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Margin="0,10,0,0">

                        <Button Grid.Column="0"
                        Text="Cancel"
                        FontFamily="SuperCartoon"
                        FontSize="22"
                        BackgroundColor="#FF797C"
                        BorderColor="Black"
                        BorderWidth="1"
                        CornerRadius="20"
                        Clicked="CancelClicked"/>

                        <Button Grid.Column="1"
                        Text="Confirm"
                        FontFamily="SuperCartoon"
                        FontSize="22"
                        BackgroundColor="#79FF9D"
                        BorderColor="Black"
                        BorderWidth="1"
                        CornerRadius="20"
                        Clicked="ConfirmClicked"/>
                    </Grid>

                </VerticalStackLayout>
            </Border>
        </Grid>

    </Grid>

</ContentPage>

